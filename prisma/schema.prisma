generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  username    String
  email       String    @unique
  is_approved Boolean   @default(false)
  role        Role      @default(INITIATOR)
  changePassword  Boolean  @default(true)
  createdAt   DateTime  @default(now())
  password    String
  deletedAt   DateTime?
  // Relations
  vouchersCreated Voucher[] @relation("VoucherCreatedBy")
  vouchers        Voucher[] @relation("VoucherUser")
}

model Voucher {
  id              String      @id @default(uuid())
  date            DateTime    @default(now())
  voucherNo       String      @unique @default(uuid()) 
  payee           String
  voucherDetails  String
  accountCode     Account     @relation(fields: [accountId], references: [id])
  budgetCode      Budget      @relation(fields: [budgetId], references: [id])
  beneficiaryCode Beneficiary @relation(fields: [beneficiaryId], references: [id])
  exchangeRate    Int
  amountFigures   Int
  amountWords     String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  deletedAt       DateTime?
  status          Status      @default(DRAFT)
  // Ownership & workflow
  createdById     String 
  createdBy       User        @relation("VoucherCreatedBy", fields: [createdById], references: [id])
  reviewedById    String?
  reviewedAt      DateTime?
  reviewComment   String?

  approvedById    String?
  approvedAt      DateTime?

  rejectedById    String?
  rejectedAt      DateTime?
  rejectionReason String?

  userId        String 
  Document      Document[]
  user_id       User       @relation("VoucherUser", fields: [userId], references: [id])
  accountId     String
  budgetId      String
  beneficiaryId String
}

model Document {
  id         String    @id @default(uuid())
  filepath   String
  filename   String
  filetype   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  voucherId  String
  voucher_id Voucher   @relation(fields: [voucherId], references: [id])
}

model Account {
  id        String    @id @default(uuid())
  name      String    @unique
  code      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vouchers  Voucher[]
}

model Budget {
  id        String    @id @default(uuid())
  name      String    @unique
  code      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vouchers  Voucher[]
}

model Beneficiary {
  id        String    @id @default(uuid())
  name      String    @unique
  code      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vouchers  Voucher[]
}

enum Role {
  INITIATOR
  REVIEWER
  APPROVER
  ADMIN
}

enum Status {
  DRAFT
  INITIATED
  // PENDING
  IN_REVIEW
  APPROVED
  REJECTED
}
